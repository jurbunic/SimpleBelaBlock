<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings for 3 players"
        android:textAlignment="center"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_options_player1name"
            android:layout_width="118dp"
            android:layout_height="25dp"
            android:text="Player 1 name: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edit_options_player1name"
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.0" />
        <EditText
            android:id="@+id/edit_options_player1name"
            android:layout_width="158dp"
            android:layout_height="45dp"
            android:hint="enter name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="194dp" />

        <TextView
            android:id="@+id/txt_options_player2name"
            android:layout_width="118dp"
            android:layout_height="25dp"
            android:text="Player 2 name:"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txt_options_player1name"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/edit_options_player2name"
            android:layout_width="158dp"
            android:layout_height="45dp"
            android:hint="enter name"
            app:layout_constraintTop_toBottomOf="@id/edit_options_player1name"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/txt_options_player2name"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0" />
        <TextView
            android:id="@+id/txt_options_player3name"
            android:layout_width="118dp"
            android:layout_height="25dp"
            android:text="Player 3 name:"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txt_options_player2name"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/edit_options_player3name"
            android:layout_width="158dp"
            android:layout_height="45dp"
            android:hint="enter name"
            app:layout_constraintTop_toBottomOf="@id/edit_options_player2name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/txt_options_player3name"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0" />
    </android.support.constraint.ConstraintLayout>
    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/thin_line"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting for 4 players"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_options_team1name"
            android:layout_width="118dp"
            android:layout_height="25dp"
            android:text="Team 1 name: "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edit_options_team1name"
            android:layout_marginTop="13dp"
            app:layout_constraintHorizontal_bias="0.0" />
        <EditText
            android:id="@+id/edit_options_team1name"
            android:layout_width="158dp"
            android:layout_height="45dp"
            android:hint="enter name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="194dp" />

        <TextView
            android:id="@+id/txt_options_team2name"
            android:layout_width="118dp"
            android:layout_height="25dp"
            android:text="Team 2 name:"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txt_options_team1name"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/edit_options_team2name"
            android:layout_width="158dp"
            android:layout_height="45dp"
            android:hint="enter name"
            app:layout_constraintTop_toBottomOf="@id/edit_options_team1name"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/txt_options_team2name"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0" />
    </android.support.constraint.ConstraintLayout>
    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/thin_line"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/fab_confirm"
            android:layout_width="@dimen/rounded_button_dimensions"
            android:layout_height="@dimen/rounded_button_dimensions"
            android:background="@drawable/roundedbutton"
            android:src="@mipmap/icon_confirm"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:id="@+id/fab_reject"
            android:layout_width="@dimen/rounded_button_dimensions"
            android:layout_height="@dimen/rounded_button_dimensions"
            android:background="@drawable/roundedbutton"
            android:src="@mipmap/icon_reject"
            android:layout_marginRight="64dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


    </android.support.constraint.ConstraintLayout>



</LinearLayout>